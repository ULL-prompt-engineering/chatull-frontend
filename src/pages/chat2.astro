---
import Layout from '../layouts/Layout.astro';
import Input2 from '../components/Input2.astro';
---

<Layout title="Chat">
    <main class="font-sans">
        <div class="drawer md:drawer-open">
            <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <div class="p-4 overflow-y-auto h-[85vh] chat-container border border-gray-300">
                    <label for="my-drawer-2" class="btn bg-transparent drawer-button md:hidden">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M5 6H12H19M5 12H19M5 18H19" stroke="black" stroke-width="2" stroke-linecap="round"/> </svg>
                    </label>             
                </div>
                <Input2/>
            </div> 
            <div class="drawer-side">
              <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label> 
              <ul class="menu p-4 w-80 min-h-full bg-purple-100 text-base-content lateral-menu">
                <!-- Sidebar content here -->
              </ul>            
            </div>
        </div>
        <script src="/src/js/subjects_controller.js"></script>
    </main>
</Layout>
