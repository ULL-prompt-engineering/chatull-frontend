---
import Layout from "../layouts/Layout.astro";
import Input from "../components/Input.astro";
import NewChatModal from "../components/NewChatModal.astro";
---

<Layout title="Chat">
  <main class="">
    <div class="drawer md:drawer-open">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <label
          for="my-drawer-2"
          class="btn bg-transparent drawer-button md:hidden"
        >
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M5 6H12H19M5 12H19M5 18H19"
              stroke="black"
              stroke-width="2"
              stroke-linecap="round"></path>
          </svg>
        </label>
        <div class="p-2 mr-2 mt-4 overflow-y-auto h-[81vh] md:h-[74vh] chat-container">
        </div>
        <Input />
        <NewChatModal />
      </div>
      <div class="drawer-side md:h-[89vh] lateral-menu-div">
        <input
          type="text"
          class="subject"
          value=""
          hidden
        />
        <label
          for="my-drawer-2"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <ul
          class="menu p-4 w-80 min-h-full bg-purple-100 text-base-content lateral-menu gap-1"
        >
          <!-- Sidebar content here -->
        </ul>
      </div>
    </div>
    <script src="/src/ts/main.ts"></script>
  </main>
</Layout>
